<MyGrid>:

    title1: title1
    title2: title2
    title3: title3
    time1: time1
    time2: time2
    time3: time3
    button1: button1
    button2: button2
    button3: button3
    message: message
    button_reset: button_reset

    GridLayout:
        cols:1
        size: root.width - 200, root.height -200
        pos: 100, 100

        GridLayout:
            cols:3

            Label:
                id: time1
                text: str(round(root.number1))
                font_size: 22

            TextInput:
                id: title1
                multiline: True
                font_size: 16

            Button:
                id: button1
                text:"Start"
                on_press: root.btn1()

            Label:
                id: time2
                text: str(round(root.number2))
                font_size: 22

            TextInput:
                id: title2
                multiline: True
                font_size: 16

            Button:
                id: button2
                text:"Start"
                on_press: root.btn2()


            Label:
                id: time3
                text: str(round(root.number3))
                font_size: 22

            TextInput:
                id: title3
                multiline: True
                font_size: 16

            Button:
                id: button3
                text:"Start"
                on_press: root.btn3()

        Label:
            id: message
            text: "Log messages here."

        Button:
            id: button_reset
            text:"Reset"
            on_press: root.btn_reset()